---
interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<section class="py-24 bg-gradient-to-br from-black-iron to-forge-gray border-b border-white/10 relative">
  <div class="absolute inset-0 opacity-20" style="background-image: linear-gradient(rgba(0, 229, 255, 0.02) 1px, transparent 1px), linear-gradient(90deg, rgba(0, 229, 255, 0.02) 1px, transparent 1px); background-size: 40px 40px;"></div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold mb-8 bg-gradient-to-r from-white to-signal-cyan bg-clip-text text-transparent leading-tight" style="font-family: var(--font-heading);">
        {title}
      </h1>
      {description && (
        <p class="text-lg md:text-xl lg:text-2xl text-data-silver max-w-3xl mx-auto leading-relaxed">
          {description}
        </p>
      )}
    </div>
  </div>
</section>
