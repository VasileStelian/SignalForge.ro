---
import siteConfig from '../data/siteConfig.json';

interface Props {
  t: any;
  lang: string;
}

const { t, lang } = Astro.props;
---

<section class="py-24 bg-forge-gray">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 max-w-5xl mx-auto">
      <div class="flex flex-col justify-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6" style="font-family: var(--font-heading);">{t.title}</h2>
        <p class="text-lg text-data-silver mb-8 leading-relaxed">{t.description}</p>

        <div class="space-y-6">
          <div>
            <div class="text-xs font-semibold uppercase tracking-wider text-signal-cyan mb-2" style="font-family: var(--font-subheading);">{t.email}</div>
            <a href={`mailto:${siteConfig.primaryEmail}`} class="text-lg hover:text-signal-cyan transition-colors">
              {siteConfig.primaryEmail}
            </a>
          </div>

          <div>
            <div class="text-xs font-semibold uppercase tracking-wider text-signal-cyan mb-2" style="font-family: var(--font-subheading);">{t.location}</div>
            <div class="text-lg">{siteConfig.location}</div>
          </div>
        </div>
      </div>

      <div class="bg-black-iron p-8 rounded-xl border border-white/5">
        <!-- TODO: Connect this form to a backend or form service -->
        <form class="space-y-6" method="POST" action="#">
          <div>
            <label for="name" class="block text-sm font-medium mb-2">{t.form.nameRequired}</label>
            <input type="text" id="name" name="name" required placeholder={t.form.namePlaceholder} class="w-full px-4 py-3 bg-forge-gray border-2 border-white/10 rounded-lg focus:border-signal-cyan focus:outline-none transition-colors" />
          </div>

          <div>
            <label for="email" class="block text-sm font-medium mb-2">{t.form.email}</label>
            <input type="email" id="email" name="email" required placeholder={t.form.emailPlaceholder} class="w-full px-4 py-3 bg-forge-gray border-2 border-white/10 rounded-lg focus:border-signal-cyan focus:outline-none transition-colors" />
          </div>

          <div>
            <label for="company" class="block text-sm font-medium mb-2">{t.form.company}</label>
            <input type="text" id="company" name="company" placeholder={t.form.companyPlaceholder} class="w-full px-4 py-3 bg-forge-gray border-2 border-white/10 rounded-lg focus:border-signal-cyan focus:outline-none transition-colors" />
          </div>

          <div>
            <label for="message" class="block text-sm font-medium mb-2">{t.form.message}</label>
            <textarea id="message" name="message" required placeholder={t.form.messagePlaceholder} rows="5" class="w-full px-4 py-3 bg-forge-gray border-2 border-white/10 rounded-lg focus:border-signal-cyan focus:outline-none transition-colors resize-vertical"></textarea>
          </div>

          <button type="submit" class="w-full px-8 py-4 bg-signal-cyan text-black-iron font-semibold rounded-lg hover:bg-cyan-300 transition-all hover:-translate-y-0.5" style="font-family: var(--font-subheading);">
            {t.form.submit}
          </button>
        </form>
      </div>
    </div>
  </div>
</section>
