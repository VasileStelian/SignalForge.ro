---
import servicesRo from '../data/services-ro.json';
import servicesEn from '../data/services-en.json';

interface Props {
  t: any;
  lang: string;
}

const { t, lang } = Astro.props;
const services = lang === 'en' ? servicesEn : servicesRo;
const servicesHref = lang === 'en' ? '/en/services' : '/services';
---

<section class="py-24">
  <div class="container mx-auto px-4">
    <div class="text-center max-w-2xl mx-auto mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-6" style="font-family: var(--font-heading);">{t.title}</h2>
      <p class="text-lg text-data-silver">{t.description}</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map((service) => (
        <article class="bg-forge-gray p-8 rounded-xl border border-white/5 hover:-translate-y-1 transition-all duration-300 relative group">
          <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-signal-cyan to-forge-orange opacity-0 group-hover:opacity-100 transition-opacity rounded-t-xl"></div>

          <div class="inline-block px-3 py-1 bg-signal-cyan/10 text-signal-cyan text-xs font-semibold uppercase tracking-wider rounded mb-4" style="font-family: var(--font-subheading);">
            {service.category}
          </div>

          <h3 class="text-2xl font-bold mb-4" style="font-family: var(--font-heading);">{service.title}</h3>
          <p class="text-data-silver mb-6 leading-relaxed">{service.shortDescription}</p>

          <ul class="space-y-3 mb-6 flex-grow">
            {service.bullets.slice(0, 4).map((bullet) => (
              <li class="text-sm text-data-silver pl-6 relative">
                <span class="absolute left-0 text-signal-cyan font-bold">→</span>
                {bullet}
              </li>
            ))}
          </ul>

          <a href={`${servicesHref}#${service.slug}`} class="text-signal-cyan font-semibold hover:text-forge-orange transition-colors" style="font-family: var(--font-subheading);">
            {lang === 'en' ? 'Learn more →' : 'Află mai multe →'}
          </a>
        </article>
      ))}
    </div>
  </div>
</section>
