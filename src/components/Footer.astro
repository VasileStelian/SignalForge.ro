---
import siteConfig from '../data/siteConfig.json';

interface Props {
  lang: string;
  common: any;
}

const { lang, common } = Astro.props;
const currentYear = new Date().getFullYear();

const navLinks = [
  { label: common.nav.home, href: lang === 'en' ? '/en' : '/' },
  { label: common.nav.services, href: lang === 'en' ? '/en/services' : '/services' },
  { label: common.nav.about, href: lang === 'en' ? '/en/about' : '/about' },
  { label: common.nav.contact, href: lang === 'en' ? '/en/contact' : '/contact' }
];
---

<footer class="bg-forge-gray border-t border-white/10 py-24 mt-24">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12 mb-12">
      <div class="max-w-md">
        <h3 class="text-2xl font-bold mb-2" style="font-family: var(--font-heading);">{common.siteTitle}</h3>
        <p class="text-signal-cyan mb-4" style="font-family: var(--font-subheading);">{common.siteTagline}</p>
        <p class="text-sm text-data-silver leading-relaxed">{common.siteDescription}</p>
      </div>

      <div>
        <h4 class="text-base font-semibold mb-4" style="font-family: var(--font-subheading);">{common.footer.navigation}</h4>
        <ul class="flex flex-col gap-3">
          {navLinks.map((link) => (
            <li>
              <a href={link.href} class="text-sm text-data-silver hover:text-signal-cyan transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div>
        <h4 class="text-base font-semibold mb-4" style="font-family: var(--font-subheading);">{common.footer.contactTitle}</h4>
        <ul class="flex flex-col gap-3">
          <li>
            <a href={`mailto:${siteConfig.primaryEmail}`} class="text-sm text-data-silver hover:text-signal-cyan transition-colors">
              {siteConfig.primaryEmail}
            </a>
          </li>
          <li class="text-sm text-data-silver">{siteConfig.location}</li>
        </ul>
      </div>
    </div>

    <div class="pt-8 border-t border-white/10 text-center">
      <p class="text-sm text-data-silver">&copy; {currentYear} {common.siteTitle}. {common.footer.rights}</p>
    </div>
  </div>
</footer>
