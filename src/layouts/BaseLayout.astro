---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  pageUrl: string;
  lang: string;
  common: any;
}

const {
  title,
  description,
  pageUrl,
  lang = 'ro',
  common
} = Astro.props;

const fullTitle = `${title} | ${common.siteTitle}`;
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{fullTitle}</title>
    <meta name="title" content={fullTitle} />
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={pageUrl} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content={common.siteTitle} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={pageUrl} />
    <meta property="twitter:title" content={fullTitle} />
    <meta property="twitter:description" content={description} />

    <!-- Canonical URL -->
    <link rel="canonical" href={pageUrl} />

    <!-- Alternate Language Links -->
    {lang === 'ro' ? (
      <link rel="alternate" hreflang="en" href={`https://www.signalforge.ro/en${Astro.url.pathname}`} />
    ) : (
      <link rel="alternate" hreflang="ro" href={`https://www.signalforge.ro${Astro.url.pathname.replace('/en', '')}`} />
    )}
  </head>
  <body>
    <Header lang={lang} common={common} />
    <main>
      <slot />
    </main>
    <Footer lang={lang} common={common} />
  </body>
</html>
